#carousel-example-generic.carousel(data-ride="carousel")
  %div.carousel-inner
    - album.pictures.each do |picture|
      %div.item.active
        %img(src="/#{@locale}/#{album.folder.to_url}/thumbnail/#{picture.basename}")
        %div.carousel-caption
          #{t.picturama.picture.taken} #{l picture.ctime}

  %a.left.carousel-control(href="#carousel-example-generic" data-slide="prev")
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control(href="#carousel-example-generic" data-slide="next")
    %span.glyphicon.glyphicon-chevron-right

:javascript
  $('.carousel').carousel();